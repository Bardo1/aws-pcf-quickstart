{
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{aws_access_key_id}}",
      "secret_key": "{{aws_secret_access_key}}",
      "region": "us-west-1",
      "source_ami": "ami-9fe6c7ff",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "pcf bootstrap {{ami_version}}",
      "ami_description": "Pivotal CF bootstrap image: not useful outside of marketplace offering.",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 40
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "mkdir /home/ubuntu/tiles",
        "sudo apt-get update -y",
        "sudo apt-get install -y python3-dev python3-pip mysql-client-core-5.7",
        "sudo pip3 install --upgrade pip awscli"
      ]
    },
    {
      "destination": "/home/ubuntu/tiles/",
      "source": "{{ert_file}}",
      "type": "file"
    },
    {
      "destination": "/home/ubuntu/tiles/ert-metadata.json",
      "source": "{{ert_metadata_file}}",
      "type": "file"
    },
    {
      "destination": "/home/ubuntu/tiles/",
      "source": "{{broker_file}}",
      "type": "file"
    },
    {
      "destination": "/home/ubuntu/tiles/broker-metadata.json",
      "source": "{{broker_metadata_file}}",
      "type": "file"
    },
    {
      "destination": "/home/ubuntu/tiles/",
      "source": "{{stemcell_file}}",
      "type": "file"
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "manifest.json",
      "strip_path": true
    }
  ]
}
